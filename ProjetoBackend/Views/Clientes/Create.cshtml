@model ProjetoBackend.Models.Cliente

@{
    ViewData["Title"] = "Criação de Cliente";
}

<div class="container cliente-form">
    <h2 class="form-title">Criação</h2>
    <h3 class="form-subtitle">Clientes</h3>

    <form asp-action="Create" class="form-custom">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Nome" class="control-label">Nome:</label>
            <input asp-for="Nome" class="form-control input-custom" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="control-label">E-mail:</label>
            <input asp-for="Email" class="form-control input-custom" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Celular" class="control-label">Celular:</label>
            <input asp-for="Celular" class="form-control input-custom" oninput="formatarTelefone(this)" id="telefone" />
            <span asp-validation-for="Celular" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CnpjCpf" class="control-label">CPF:</label>
            <input asp-for="CnpjCpf" class="form-control input-custom" />
            <span asp-validation-for="CnpjCpf" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DataNascimento" class="control-label">Data de nascimento:</label>
            <input type="date" asp-for="DataNascimento" class="form-control input-custom" />
            <span asp-validation-for="DataNascimento" class="text-danger"></span>
        </div>

        <input type="hidden" asp-for="DataCadastro" />
        <input type="hidden" asp-for="CadastroAtivo" />

        <div class="form-group">
            <input type="submit" value="CRIAR" class="btn btn-primary btn-custom" />
        </div>
        <div class="form-group">
            <a asp-action="Index" class="back-link">← voltar</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
